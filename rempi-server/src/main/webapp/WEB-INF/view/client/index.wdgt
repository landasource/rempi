div(class = row){
    
    div(class="col-md-6"){
        div(class = "box"){
            div(class = "header"){
                h3("Clients");
            }
            div(class = "box-body"){
                
                table(class="table table-bordered"){
                    thead{
                        tr{
                            th("Client");
                            th("Connection");
                            th("Actions");
                        }
                    }
                    tbody(rendered = !clients.isEmpty()){
                        
                        // iterate over clients
                        foreach(clientId -> connId : clients){
                            
                            tr{
                                td(clientId);                                
                                td(connId);
                                // actions
                                td{
                                    
                                    button(type="button", class="btn btn-default btn-sm capture-button", "data-clientId"= clientId, onclick="capture('" + clientId + "', this)"){ "Capture"; }             
                                    div(id="capture-" + clientId);
                                    
                                }
                                
                            }
                            
                        }
                        
                    }
                }
                
            }
            
        }
    }
    
    div(class="col-md-6"){
        
    }
    
    
}
